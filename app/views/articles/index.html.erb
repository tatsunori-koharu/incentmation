<%= render partial: "layouts/header"%>

<h1>トピックス</h1>
<div>
  <%= link_to "新規投稿", new_article_path %>
  <%= link_to "戻る", root_path %>
</div>

<div class="d-flex p-2 bd-highlight justify-content-center">
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col">
        <div class="card" style="width: 20rem;">
          <div class="card-img-top">
            <% if article.images.count > 0%>
              <%= image_tag(article.images.first, class:"rounded mx-auto d-block img-fluid", width:"100%", height:"180px") %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="name">投稿者：<%= article.user.nickname %></div>
            <h5 class="card-title"><%= article.title %></h5>
            <div class="card-text overflow-hidden"><%= article.content %></div>
            <%= link_to "この記事へ", article_path(article.id), class:"btn btn-primary" %>
          </div>
        </div>
        
      </div>
      <div class="w-100"></div>
    </div>
  <% end %>
</div>