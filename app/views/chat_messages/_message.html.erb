<div class="col-md-8 col-xl-6 chat">
  <div class="card">
    <div class="card-header">
      <%= form_with(model: [@chat, @chat_message], local: true) do |f| %>
        <%= f.text_field :message, id:"content", class:"form-control"%>
        <%= f.submit '送信' %>
      <% end %>
    </div>
    <div class="chat-room card-body msg_card_body">
      <%# <div> %>
        <% @chat_messages.reverse_each do |message| %>
          <% if message.user.id == current_user.id %> 
          <div>
            <div class="d-flex justify-content-end mb-4">
              <div class="msg_container" style="max-width:75%;">
                <p><%= message.message %></p>
                <p>
                  <%= message.user.nickname %>:
                  <%= message.created_at %>
                </p>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
        <% @chat_messages.reverse_each do |message| %>
          <% if message.user.id != current_user.id %> 
          <div>
            <div class="d-flex justify-content-start mb-4">
              <div class="msg_container" style="max-width:75%;">
                <p><%= message.message %></p>
                <p>
                  <%= message.user.nickname %>:
                  <%= message.created_at %>
                </p>
              </div>
            </div>
            </div>
          <% end %>
        <% end %>
      <%# <div> %>
    </div>
  </div>
</div>