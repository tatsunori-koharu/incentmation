<%= form_with model: @article, local: true do |f| %>
  <div>
    <%= f.label :タイトル %><br/>
    <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
  </div>
  <div>
    <%= f.label :内容 %><br/>
    <%= f.text_area :content, autocomplete: "content" %>
  </div>
  <div>
    <%= f.label :画像 %><br/>
    <%= f.file_field :images , name: 'article[images][]', id: 'article_image' %>
    <div id= "image-list"></div>
    <div id='images_pho'>
    <% @article.images.each do |image| %>
      <%= image_tag image %>
    <% end %>
    </div>
  </div>
  <div>
    <%= f.label :動画 %><br/>
    <%= f.file_field :move %>
  <div>
    <%= f.submit :投稿 %>
  </div>
<% end %>

  <%= link_to "情報コーナーへ戻る", articles_path %>
