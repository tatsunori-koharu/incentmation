<div class="text-center container">
<h2>編集</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(新しいパスワードを入力して下さい（６文字以上の英数字混合）)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(現在使用中のパスワード)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :勤務地 %><br />
    <%= f.collection_select(:location_id, Location.all, :id, :name, {}, {class:"form-control"}) %>
  </div>

  <div class="field">
    <%= f.label :診療科 %><br />
    <%= f.collection_select(:department_id, Department.all, :id, :name, {}, {class:"form-control"}) %>
  </div>

  <div class="field">
    <%= f.label :病床数 %><br />
    <%= f.text_field :bed, autocomplete: "bed", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :勤続年数 %><br />
    <%= f.text_field :service_years, autocomplete: "service_years", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :資格 %><br />
    <%= f.text_field :license, autocomplete: "license", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :会社名 %><br />
    <%= f.text_field :company, autofocus: true, autocomplete: "company", class:"form-control" %>
  </div>

  <div>
    <%= f.label :画像 %>
    <%= f.file_field :image , name: 'user[image]', id: 'site_image' %>
    <div id='image_list'></div>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p>削除しますか？ <%= button_to "削除", registration_path(resource_name), data: { confirm: "削除してもよろしいですか？" }, method: :delete %></p>

<%= link_to "戻る", :back %>
</div>