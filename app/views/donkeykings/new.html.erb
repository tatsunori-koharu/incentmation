<h2 class="text-center">愚  痴  投  稿</h2>
<div class=" d-flex justify-content-center">
  <div class="col-md-8 col-xl-6 chat">
    <div class="tweet-room">
      <div class="card-header">
        <%= form_with model: @donkeyking, local: true do |f| %>
          <%= f.label '愚痴' %>
          <%= f.text_field :tweet, class:"form-control"%>
          <%= f.submit "吐き出し", class:"btn btn-warning"%>
        <% end %>
      </div>
      <div class="card-body">
        <% @donkeykings.reverse_each do |donkeyking|%>
          <% if donkeyking.deleted_at > Time.now %>
            <div class="tweet-card border border-primary">
              <p><%= donkeyking.tweet %></p>
              <p><%= l donkeyking.created_at %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>