<div class="text-center">
  <%= render partial: "layouts/header"%>

  <h1 class="h3 mb-3 font-weight-normal">新規登録</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>
    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email" %> 
    </div>

    <% if @sns_id.present? %>
      <%= hidden_field_tag :sns_auth, true %>
    <% else %>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :勤務地 %><br />
      <%= f.collection_select(:location_id, Location.all, :id, :name, {}, {}) %>
    </div>

    <div class="field">
      <%= f.label :診療科 %><br />
      <%= f.collection_select(:department_id, Department.all, :id, :name, {}, {}) %>
    </div>

    <div class="field">
      <%= f.label :病床数 %><br />
      <%= f.text_field :bed, autocomplete: "bed" %>
    </div>

    <div class="field">
      <%= f.label :勤続年数 %><br />
      <%= f.text_field :service_years, autocomplete: "service_years" %>
    </div>

    <div class="field">
      <%= f.label :資格 %><br />
      <%= f.text_field :license, autocomplete: "license" %>
    </div>

    <div class="field">
      <%= f.label :会社名 %><br />
      <%= f.text_field :company, autofocus: true, autocomplete: "company" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
