<%= form_with model: @promotion, local: true do |f| %>
  <div class="container">
  <div class="form-group mx-auto" style="width: 840px;">
    <div>
      <h3><%= f.label :商品名 %></h3>
      <%= f.text_field :name, autofocus: true, autocomplete: "title", class:"form-control" %>
    </div>
    <div>
      <h3><%= f.label :詳細 %></h3>
      <%= f.text_area :content, autocomplete: "content", class:"form-control", style:"height: 500px;" %>
    </div>
    <div>
      <h3><%= f.label :カテゴリー %></h3>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"form-control"}) %>
    </div>
    <div>
      <h3><%= f.label :画像 %></h3>
      <%= f.file_field :images , name: 'promotion[images][]', id: 'site_image' %>
      <div id= "image-list"></div>
      <div id='images_pho'>
        <% @promotion.images.each do |image| %>
          <%= image_tag(image, class:"rounded mx-auto d-block img-fluid", width:"100%")  %>
        <% end %>
      </div>
    </div>
    <div>
      <h3><%= f.label :動画 %></h3>
      <%= f.file_field :move %>
    <div>
      <%= f.submit :投稿 %>
    </div>
  </div>
  </div>
<% end %>

  <%= link_to "商品一覧へ戻る", promotions_path %>
